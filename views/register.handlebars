
<div class="container">
  {{#if errors}} {{#each errors}}
  <div class="alert alert-danger"> {{this.msg}} </div>
  {{/each}} {{/if}}
</div>

<div class="register modal-dialog text-center">
  <div class="col-sm-9 main-section">
    <div class="modal-content">
      <div class="col-12 user-img">
        <img src="/assets/img/face.png" alt="">
      </div>
      <div class="col-12 form-input">
        <form method="POST" action="/register">
          <div class="form-group name">
            <input id="registration-name" name="username" type="text" class="form-control" placeholder="Enter Name">
          </div>
          <div class="form-group password">
            <input id="registration-pass" name="password" type="password" class="form-control" placeholder="Enter Password">
          </div>
          <div class="form-group password">
            <input id="registration-confirm-pass" name="confirmPassword" type="password" class="form-control" placeholder="Confirm Password">
          </div>
          <button id="registration-form" name="register" type="submit" class="btn btn-success">Register</button>
        </form>
      </div>
      <div class="col-12">
        <p class="message">Already Registered ?
          <a href="/login" class="login-link"> Login </a>
        </p>
      </div>
    </div>
  </div>
</div>