<div class="container">
  <div class="row">
    <div class="col-md-4 offset-md-4 text-center">
        <br>
      <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#exampleModal1">Create Post</button>
    </div>
    
  <ul class="row notes">
    {{#each posts}}
    <li>
      <div class="rotate-1 lazur-bg">
        <h4>{{this.title}}</h4>
        <p>Created By: {{this.name}} </p>
        <p>{{this.description}}</p>
        <a id="post-{{this.id}}" class="text-danger pull-right delete">
          <i class="fa fa-trash-o "></i>
        </a>
      </div>
    </li>
    {{/each}}
  </ul>
</div>

<div class="modal fade" id="exampleModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content mymodal">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form method="POST" action="/posts">
          <div class="form-group name">
            <input name="title" type="text" class="form-control" placeholder="Enter Title">
          </div>
          <div class="form-group name">
            <input name="description" type="text" class="form-control" placeholder="Enter Description">
          </div>    
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Confirm</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js"></script>
<script src="https://pingendo.com/assets/bootstrap/bootstrap-4.0.0-alpha.6.min.js"></script> 
<script src="/assets/js/postit.js"></script>